{
  "name": "Python 3",
  "image": "mcr.microsoft.com/devcontainers/python:1-3.11-bullseye",
  "customizations": {
    "codespaces": {
      "openFiles": [
        "README.md",
        "backend/app/rag_chain.py"
      ]
    },
    "vscode": {
      "settings": {},
      "extensions": [
        "ms-python.python",
        "ms-python.vscode-pylance"
      ]
    }
  },
  "updateContentCommand": "pip install -r backend/requirements.txt",
  "postCreateCommand": "cd frontend && npm install",
  "postAttachCommand": "uvicorn backend.app.main:app --host 0.0.0.0 --port 8000 & cd frontend && npm run dev",
  "portsAttributes": {
    "8000": {
      "label": "FastAPI Backend",
      "onAutoForward": "openPreview"
    },
    "3000": {
      "label": "Next.js Frontend",
      "onAutoForward": "openPreview"
    }
  },
  "forwardPorts": [8000, 3000]
}
